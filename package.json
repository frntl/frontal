{
  "name": "frontal",
  "version": "0.1.0",
  "main": "app/main.js",
  "private": true,
  "engines": {
    "node": "4.2"
  },
  "scripts": {
    "start": "./node_modules/.bin/electron app/main.js",
    "prewatch": "echo 'cleaning app/ folder' && rm -r app/",
    "watch": "./node_modules/.bin/babel src -w -d app -D",
    "sass": "./node_modules/.bin/node-sass -w src/views/themes/default/scss/ -o src/views/themes/default/css/ --output-style=compact",
    "test": "./node_modules/.bin/mocha --compilers js:babel-register",
    "pandoc": "echo 'trying to create markdown via pandoc for testing css in ./test/index.html' && sh bin/pandoc.sh"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "chokidar": "^1.6.0",
    "electron-drag": "^1.2.0",
    "highlight.js": "^9.5.0",
    "highlights": "^1.3.0",
    "markdown": "^0.5.0",
    "markdown-to-html": "0.0.11",
    "marked": "^0.3.5",
    "marky-markdown": "^5.4.0",
    "node-json-db": "^0.7.2",
    "remove-html-comments": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.4.1",
    "electron-prebuilt": "^1.2.6",
    "file-exists": "^1.0.0",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0"
  },
